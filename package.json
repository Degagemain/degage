{
  "name": "open-cars",
  "version": "1.0.0",
  "scripts": {
    "predev": "pnpm db:start",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --config .prettierrc --check .",
    "format:fix": "prettier --config .prettierrc --write .",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down --volumes --remove-orphans && pnpm db:start && pnpm db:migrate",
    "db:migrate": "env $(cat .env | xargs) prisma migrate dev",
    "db:seed": "env $(cat .env | xargs) prisma db seed",
    "docs": "node scripts/validate-docs.mjs"
  },
  "keywords": [],
  "author": "Mathias Colpaert",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@daveyplate/better-auth-ui": "^3.2.11",
    "@google/genai": "^1.42.0",
    "@prisma/adapter-neon": "^7.3.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.553.0",
    "next": "^16.1.5",
    "next-intl": "^4.8.2",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "radix-ui": "^1.4.3",
    "react": "^19.1.1",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.1.1",
    "resend": "^6.9.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "24.3.0",
    "@types/react": "19.1.12",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "prisma": "^7.3.0",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
